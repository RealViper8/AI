import wikipedia

while True:
    inp = input("Who or What would you like to know about? (Type 'exit' to quit): ")
    
    if inp.lower() == 'exit':
        print("Exiting the program.")
        break

    try:
        result = wikipedia.summary(inp, sentences=3)
        print(f"According to Wikipedia:\n{result}")
    except wikipedia.exceptions.PageError:
        print("No matching page found on Wikipedia. Please refine your search.")

    if input("Do you want to search for something else? (yes/no): ").lower() != 'yes':
        print("Exiting the program.")
        break
